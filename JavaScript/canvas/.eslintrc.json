{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "amd": true,
        "jest/globals": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "warn",
            "never"
        ],
        "indent": [
            "error",
            2,
            { "SwitchCase": 1 }
        ]
    },
    "parser": "babel-eslint",
    "plugins": [
        "jest"
    ]
}