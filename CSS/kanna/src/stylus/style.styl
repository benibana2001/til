*
*::after
*::before
    box-sizing: border-box

/** 
    * image dimensions are 410 x 512
**/
:root
    --cat hsl(200, 40%, 35%)
    --bg hsl(200, 80%, 90%)
    --size 80
    --unit calc((var(--size) / 512) * 1vmin)
    --outline 3px solid hsla(10, 40, 40, 0.7)

body 
    background-color var(--bg)

.box__image img
    position: fixed;
    height: 80vmin;
    top: 50%;
    left:50%;
    opacity: 0.9
    transform: translate(-50%, -50%);

.kanna
    position absolute
    width: calc(410 * var(--unit))
    height: calc(512 * var(--unit))
    z-index: 2
    top: 50%;
    left:50%;
    transform: translate(-50%, -50%);

    &__head
        position: absolute
        top: 26%
        left: 52%
        width: 50%
        height: 43%
        background: hsla(0, 90, 90, 0.3)
        transform: translate(-50%, -50%)

    &__face
        position: absolute
        top: 55%
        left: 52%
        width: 50%
        height: 48%
        // background: hsla(80, 90, 90, 0.5)
        transform: translate(-50%, -50%)
        /* */
        border-radius: 0 0 70% 70% 
        border-bottom: var(--outline)

    &__hair
        position: absolute
        top: 54%
        left: 52%
        width: 72%
        height: 94%
        // background: hsla(120, 90, 90, 0.5)
        transform: translate(-50%, -50%)

        &-center
            position: absolute
            top: 32%
            left: 52%
            width: 40%
            height: 30%
            // background: hsla(200, 90, 90, 0.5)
            transform: translate(-50%, -50%)
            border-radius: 0 0 100% 100%

        &-sides
            position: absolute
            top: 53%
            left: 52%
            width: 100%
            height: 91% 
            background: hsla(240, 90, 90, 0.5)
            transform: translate(-50%, -50%)


    &____horns
        position: absolute
        top: 0%
        left: 52%
        width: 50%
        height: 43%
        background: hsla(160, 90, 90, 0.5)
        transform: translate(-50%, -50%)